<Window x:Name="saisieAnimal" x:Class="ProjetDialog.SaissieAnimal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaissieAnimal" Height="300" Width="300">
    <Window.Resources>
        <src:Animal x:Key="maSourceAnimal" Nom="?" />
    </Window.Resources>

        <Grid>
        <Label Content="Entrez le nom d'un animal et son prix" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Foreground="#FF088AC7"/>
        <TextBox x:Name="TextBoxsaissie" HorizontalAlignment="Left" Height="23" Margin="24,30,0,0" TextWrapping="Wrap" Text="?" VerticalAlignment="Top" Width="244"/>
        <TextBox x:Name="TextBoxprix" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="prix" VerticalAlignment="Top" Width="120" Margin="24,82,0,0"/>
        <Label Content="€" HorizontalAlignment="Left" Margin="169,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.462"/>
        <Button Content="Valider" HorizontalAlignment="Left" Margin="43,138,0,0" VerticalAlignment="Top" Width="75" Click="valider"/>
        <Button Content="Annuler" HorizontalAlignment="Left" Margin="170,138,0,0" VerticalAlignment="Top" Width="75" Click="annuler"/>      
    </Grid>
</Window>

